<%- include('partials/header') -%>
<div class="flex">
  <form action="/post/createPost" method="post" enctype="multipart/form-data" class="m-4 p-4 border-solid border-2 border-yellow-200 w-6/12 rounded flex-auto w-64">
      <div class="flex flex-col">
      <label for="recipeName" class="form-label"> Recipe Name</label>
      <input type="text" id="recipeName" name="recipeName" placeholder="Type here" class="input input-sm input-bordered input-warning w-full max-w-xs" />
      </div>
      <div class="flex flex-col">
          <label for="prepTime" class="form-label"> Prep Time</label>
          <input type="number" class="input input-sm input-bordered input-warning w-full max-w-xs" id="prepTime" name="prepTime">
      </div>
      <div class="flex flex-col">
        <label for="ingredients" class="form-label">Ingredients</label>
        <textarea class="input input-sm input-bordered input-warning w-full max-w-xs" id="ingredients" name="ingredients"></textarea>
      </div>
      <div class="flex flex-col">
        <label for="instructions" class="form-label">Instructions</label>
        <textarea class="input input-sm input-bordered input-warning w-full max-w-xs" id="instructions" name="instructions"></textarea>
      </div>
      <div class="flex flex-col">
        <label for="imgUpload" class="form-label">Food Image</label>
        <input type="file"  id="imageUpload" name="file">
      </div>
      <button type="submit" class="btn btn-primary" value="Upload">Add Recipe</button>
  </form>


</div>