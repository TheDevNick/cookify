<%- include('partials/header') -%>
<div class="w-full px-8 md:px-32 lg:px-24">
      <form
        action="/profile/createProfile"
        class="bg-white rounded-md shadow-2xl p-5"
        method="POST"
        enctype="multipart/form-data"
      >
        <h1 class="text-gray-800 font-bold text-2xl mb-1">Welcome!</h1>
        <p class="text-sm font-normal text-gray-600 mb-8">
          Please fill out a few more important details for a better experience
        </p>


        <!-- test new functionality  age-->
        <div class="flex items-center border-2 mb-8 py-2 px-3 rounded-2xl w-24">
          <input
            id="userAge"
            class="pl-2 w-full outline-none border-none"
            type="number"
            name="userAge"
            placeholder="Age"
            required="true"
          />
        </div>
        <!-- test new functionality age -->

        <!-- test new functionality  state-->
        <div
          class="flex justify-between border-2 mb-8 py-2 px-3 rounded-2xl w-full"
        >

          <input
            id="userState"
            class="pl-2 w-full outline-none border-none"
            type="userState"
            name="userState"
            placeholder="State"
            required="true"
          />
          <input
            id="userCity"
            class="pl-2 w-full outline-none border-none"
            type="userCity"
            name="userCity"
            placeholder="City"
            required="true"
          />
        </div>
        <!-- test new functionality state -->

        <!-- test new functionality  profile image upload-->
        <label for="imgUpload" class="form-label"
          >Profile Image (Optional)</label
        >
        <div
          class="flex items-center border-2 mb-8 p-4 rounded-2xl w-64"
        >
          <input
            id="imageUpload"
            class="pl-2 w-full outline-none border-none "
            type="file"
            name="file"
            placeholder="Profile Image"
          />
        </div>
        <!-- test new functionality profile image upload -->

        <!-- BIO -->
        <label for="imgUpload" class="form-label">Bio</label>
        <div class="flex items-center border-2 mb-8 py-2 px-3 rounded-2xl">
          <textarea
            class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
            id="exampleFormControlTextarea1"
            name="userBio"
            rows="3"
            placeholder="Add a bio to your profile"
            required="true"
          ></textarea>
        </div>
        <!-- BIO -->

        <button
          type="submit"
          class="block w-full bg-yellow-600 mt-5 py-2 rounded-2xl hover:bg-yellow-700 hover:-translate-y-1 transition-all duration-500 text-white font-semibold mb-2"
          value="upload"
        >
          Create Profile
        </button>
      </form>
    </div>